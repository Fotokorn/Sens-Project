<h1>Sign Up</h1>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.input :first_name, :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :last_name, :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :username, :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :email, :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :password, :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :password_confirmation, :input_html => {:class => 'form-control'} %>
    </div>


    <%= f.simple_fields_for :addresses, resource.addresses.build do |address| %>
        <div class="form-group">
          <%= address.input :address, :input_html => {:class => 'form-control'} %>
        </div>
        <div class="form-group">
          <%= address.input :city, :input_html => {:class => 'form-control'} %>
        </div>
        <div class="form-group">
          <%= address.input :postal_code, :input_html => {:class => 'form-control'} %>
        </div>
        <div class="form-group">
          <%= address.input :country_id, :collection => Country.all, :selected => 215, :input_html => {:class => 'form-control'} %>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.input :telephone, :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :birthdate, :as => :string, :input_html => {:class => 'form-control', :data => {:behaviour => 'datepicker'}} %>
    </div>

    <div class="form-group">
      <%= f.input :sex, :collection => ['male', 'female'], :input_html => {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: 'btn btn-default' %>
    </div>
<% end %>

